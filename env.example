# Civic OS Environment Configuration
# Copy this file to .env and fill in your values

# Global Configuration
CIVIC_ENV=development
REGION=us-west
NODE_ENV=development

# Service URLs (for local development)
LEDGER_BASE_URL=http://localhost:4001
INDEXER_BASE_URL=http://localhost:4002
EOMM_BASE_URL=http://localhost:4003
SHIELD_BASE_URL=http://localhost:4004
BROKER_BASE_URL=http://localhost:4005

# Database Configuration
DATABASE_URL=postgres://postgres:civic@localhost:5432/civic_ledger

# Integrity Thresholds
GI_MIN=0.90
INTEGRITY_GRACE_MS=15000
HEALTH_CHECK_TIMEOUT=5000

# API Keys (add your actual keys here)
CURSOR_API_URL=https://api.cursor.sh
CURSOR_API_KEY=your_cursor_api_key_here
XAI_API_KEY=your_xai_api_key_here

# Render Configuration (for deployment)
RENDER_API_KEY=your_render_api_key_here

# Civic Ledger Configuration
CIVIC_LEDGER_URL=https://civic-ledger.onrender.com
CIVIC_LEDGER_API_KEY=your_civic_ledger_api_key_here

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

# Feature Flags
ENABLE_INTEGRITY_CHECKS=true
ENABLE_SECURITY_SCANNING=true
ENABLE_MONITORING=true

# URIEL Sentinel (xAI Grok) Configuration
XAI_API_KEY=your_xai_api_key_here
XAI_BASE_URL=https://api.x.ai/v1
SENTINEL_URIEL_MODEL=grok-4
SENTINEL_URIEL_MAX_TOKENS=4096
SENTINEL_URIEL_TIMEOUT_MS=20000
SENTINEL_URIEL_GI_MIN=0.95
SENTINEL_URIEL_QPS=0.1
SENTINEL_URIEL_WEIGHT=0.20
SENTINEL_URIEL_ENABLED=true
