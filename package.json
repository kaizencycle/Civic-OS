{
  "name": "kaizen-os",
  "version": "1.0.0",
  "description": "Kaizen OS - Continuous Integrity Architecture Monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "sentinels/*",
    "labs/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "ci": "turbo run build test",
    "compose:up": "docker compose -f infra/docker/compose.yml up -d",
    "compose:down": "docker compose -f infra/docker/compose.yml down",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "atlas:audit": "npm run build --workspace=packages/atlas-sentinel && node -e \"require('./packages/atlas-sentinel/dist')\"",
    "sentinel:health": "scripts\\sentinel-health.bat",
    "integrity:report": "./scripts/integrity-report.sh",
    "docs:generate": "echo \"Documentation generation coming soon\""
  },
  "devDependencies": {
    "turbo": "^1.10.12",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kaizencycle/kaizen-os.git"
  },
  "keywords": [
    "kaizen-os",
    "kaizen-cycle",
    "monorepo",
    "integrity",
    "ledger",
    "oaa",
    "continuous-improvement"
  ],
  "author": "Kaizen Cycle",
  "license": "MIT"
}

