# OAA-API-Library (.env)
# Copy to .env and configure for your environment

# --- App ---
NODE_ENV=production
HUB_BASE_URL=https://oaa-api-library.onrender.com
PORT=3000

# --- Civic Ledger ---
LEDGER_BASE_URL=https://<your-ledger-domain>
LEDGER_ADMIN_TOKEN=__paste_from_actions_secret__

# --- E.O.M.M. ingest & sync ---
EOMM_INGEST_HMAC_SECRET=__64_hex_random__
EOMM_WRITE_MODE=github            # disk | github
GITHUB_TOKEN=__gh_pat_with_repo_write__
GITHUB_REPO=kaizencycle/OAA-API-Library
GITHUB_BRANCH=main

# --- Integrity / signing (optional now, future-on) ---
OAA_ISSUER=oaa_hub
OAA_SIGNING_VERSION=oaa:ed25519:v1
OAA_ED25519_PRIVATE_B64=
OAA_ED25519_PUBLIC_B64=

# --- CORS (if frontends call APIs) ---
CORS_ALLOW_ORIGIN=*

# --- Quality Tracking ---
QUALITY_METRICS_ENABLED=true
QUALITY_METRICS_RETENTION_DAYS=30

# --- Legacy / Additional Config ---
# Keep these for backward compatibility
APP_ENV=development
LOG_LEVEL=INFO
RENDER_API_KEY=YOUR_RENDER_API_KEY
RENDER_SERVICE_ID=YOUR_RENDER_SERVICE_ID
OAA_NONCE_REDIS_URL=redis://:password@localhost:6379/0
OAA_NONCE_TTL_SEC=600
OAA_VERIFY_PIN_KEYS=true
OAA_VERIFY_TS_MINDOM_MIN=10
OAA_VERIFY_REQUIRE_NONCE=false
DB_URL=postgresql://user:pass@localhost:5432/lab7
REDIS_URL=redis://:password@localhost:6379/1
REFLECTIONS_API_BASE=https://reflections-api.onrender.com
CITIZEN_SHIELD_API_BASE=https://citizen-shield.onrender.com
NEXT_PUBLIC_OAA_BASE=http://localhost:8080
NEXT_PUBLIC_HUB_TITLE=OAA Assistant
